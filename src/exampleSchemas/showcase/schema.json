{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "done": {
      "type": "boolean",
      "title": "Great Button",
      "description": "Please press"
    },
    "group_selector": {
      "title": "Groups or Object?",
      "type": "string",
      "enum": ["Groups", "Object"],
      "default": "Groups"
    },
    "due_date": {
      "type": "string",
      "format": "date-time"
    },
    "rating": {
      "title": "Rating",
      "description": "Please rate us",
      "type": "integer",
      "maximum": 5
    },
    "recurrence": {
      "type": "array",
      "enum": [
        "Never",
        "Daily",
        "Weekly",
        "Monthly"
      ]
    },
    "recurrence_interval": {
      "type": "integer"
    },
    "testArray": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "testObject": {
      "type": "object",
      "title": "Pet",
      "properties": {
        "name": {
          "type": "string",
          "description": "Give me a name"
        },
        "age": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "flauschig": {
          "type": "boolean"
        }
      },
      "required": ["name", "age"]
    },
    "fancyness": {
      "type": "string",
      "enum": [
        "fancy",
        "fancier",
        "fanciest",
        "unicorn"
      ]
    }

  },
  "required": [
    "done",
    "name",
    "fancyness"
  ]
}
