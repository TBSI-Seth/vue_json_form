{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "gender": {
      "type": "string",
      "enum": ["Male", "Female", "Divers"]
    },
    "description": {
      "type": "string"
    },
    "done": {
      "type": "boolean",
      "title": "Great Switch",
      "description": "Please press"
    },
    "group_selector": {
      "title": "Groups or Object?",
      "type": "string",
      "enum": ["Groups", "Object"],
      "default": "Groups"
    },
    "due_date": {
      "type": "string",
      "format": "date-time"
    },
    "rating": {
      "title": "Rating",
      "description": "Please rate us",
      "type": "integer",
      "maximum": 5
    },
    "weekday": {
      "type": "array",
      "enum": [
       "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ]
    },
    "recurrence_interval": {
      "title": "Week Interval",
      "type": "integer"
    },
    "testArray": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "testObject": {
      "type": "object",
      "title": "Pet",
      "properties": {
        "name": {
          "type": "string",
          "description": "Give me a name"
        },
        "age": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "flauschig": {
          "type": "boolean"
        }
      },
      "required": ["name", "age"]
    },
    "fancyness": {
      "type": "string",
      "enum": [
        "fancy",
        "fancier",
        "fanciest",
        "unicorn"
      ]
    },
    "tags": {
      "title": "Tag this form",
      "type": "array"
    }

  },
  "required": [
    "done",
    "name",
    "fancyness"
  ]
}
