{
  "title": "Wizard",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://educorvi.github.io/vue_json_form/schema/wizard.schema.json",
  "type": "object",
  "description": "A wizard that contains the form spread over multiple pages",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["Wizard"]
    },
    "title": {
      "type": "string",
      "description": "The Wizards title"
    },
    "subtitle": {
      "type": "string",
      "description": "The Wizards subtitle"
    },
    "pages": {
      "type": "array",
      "items": {
        "$ref": "https://educorvi.github.io/vue_json_form/schema/wizard_page.schema.json"
      }
    }
  },
  "required": ["type", "pages"]
}
