{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://educorvi.github.io/vue_json_form/schemas/ui.schema.json",
  "title": "UI Schema",
  "description": "Schema for the UI Schema",
  "definitions": {

    "html": {
      "title": "HTML Renderer",
      "$id": "https://educorvi.github.io/vue_json_form/ui.schema.json#definitions/html",
      "type": "object",
      "description": "Some HTML to be rendered in the form",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["HTML"]
        },
        "htmlData": {
          "type": "string"
        }
      },
      "required": ["htmlData"]
    },
    "divider": {
      "title": "Divider",
      "$id": "https://educorvi.github.io/vue_json_form/ui.schema.json#definitions/divider",
      "type": "object",
      "description": "inserts a simple divider",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Divider"]
        }
      },
      "required": ["type"]
    },
    "layout": {
      "title": "Layout",
      "$id": "https://educorvi.github.io/vue_json_form/ui.schema.json#definitions/layout",
      "type": "object",
      "description": "The different Layouts",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "VerticalLayout",
            "HorizontalLayout",
            "Group"
          ]
        },
        "elements": {
          "title": "Elements",
          "description": "The elements of the layout",
          "type": "array",
          "default": [],
          "items": {
            "title": "Layoutelement",
            "oneOf": [
              {
                "$ref": "#/definitions/control"
              },
              {
                "$ref": "#/definitions/layout"
              },
              {
                "$ref": "#/definitions/html"
              },
              {
                "$ref": "#/definitions/divider"
              },
              {
                "$ref": "#/definitions/wizard"
              }
            ]
          }
        }
      },
      "required": [
        "type",
        "elements"
      ]
    },
    "wizard_page": {
      "title": "Wizard Page",
      "$id": "https://educorvi.github.io/vue_json_form/ui.schema.json#definitions/wizard_page",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "oneOf": [
            {
              "$ref": "#/definitions/control"
            },
            {
              "$ref": "#/definitions/layout"
            },
            {
              "$ref": "#/definitions/html"
            }
          ]
        }
      },
      "required": ["title","content"]
    },
    "wizard": {
      "title": "Wizard",
      "$id": "https://educorvi.github.io/vue_json_form/ui.schema.json#definitions/wizard",
      "type": "object",
      "description": "A wizard that contains the form spread over multiple pages",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Wizard"]
        },
        "title": {
          "type": "string",
          "description": "The Wizards title"
        },
        "subtitle": {
          "type": "string",
          "description": "The Wizards subtitle"
        },
        "pages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/wizard_page"
          }
        }
      },
      "required": ["type", "pages"]
    }
  },


  "oneOf": [
    {"$ref": "#/definitions/layout"},
    {"$ref": "#/definitions/wizard"}
  ]
}
