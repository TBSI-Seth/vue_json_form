  "$id": "https://educorvi.github.io/vue_json_form/schema/wizard_page.schema.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "content": {
      "oneOf": [
        {
          "$ref": "https://educorvi.github.io/vue_json_form/schema/control.schema.json"
        },
        {
          "$ref": "https://educorvi.github.io/vue_json_form/schema/layout.schema.json"
        },
        {
          "$ref": "https://educorvi.github.io/vue_json_form/schema/html.schema.json"
        }
      ]
    }
  },
  "required": ["title","content"]
}
