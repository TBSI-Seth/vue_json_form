{
  "title": "Layout",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://educorvi.github.io/vue_json_form/schema/layout.schema.json",
  "type": "object",
  "description": "The different Layouts",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "VerticalLayout",
        "HorizontalLayout",
        "Group"
      ]
    },
    "elements": {
      "title": "Elements",
      "description": "The elements of the layout",
      "type": "array",
      "default": [],
      "items": {
        "title": "Layoutelement",
        "oneOf": [
          {
            "$ref": "https://educorvi.github.io/vue_json_form/schema/control.schema.json"
          },
          {
            "$ref": "https://educorvi.github.io/vue_json_form/schema/layout.schema.json"
          },
          {
            "$ref": "https://educorvi.github.io/vue_json_form/schema/html.schema.json"
          },
          {
            "$ref": "https://educorvi.github.io/vue_json_form/schema/divider.schema.json"
          },
          {
            "$ref": "https://educorvi.github.io/vue_json_form/schema/wizard.schema.json"
          }
        ]
      }
    }
  },
  "required": [
    "type",
    "elements"
  ]
}
