{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UI Schema",
  "description": "Schema for the UI Schema",
  "definitions": {
    "control": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Control"
          ]
        },
        "scope": {
          "type": "string",
          "format": "json-pointer"
        },
        "label": {
          "type": "boolean",
          "default": false
        },
        "options": {
          "type": "object",
          "properties": {
            "multi": {
              "type": "boolean",
              "default": false,
              "description": "If set true, textarea will be shown instead of textfield"
            },
            "rating": {
              "type": "boolean",
              "default": false,
              "description": "if set to true, numberfield will appear as star-rating-field"
            }
          }
        },
        "rule": {
          "type": "object"
        }
      },
      "required": [
        "type",
        "scope"
      ]
    },
    "layout": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "VerticalLayout",
            "HorizontalLayout",
            "Group"
          ]
        },
        "elements": {
          "type": "array",
          "default": [],
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/control"
              },
              {
                "$ref": "#/definitions/layout"
              }
            ]
          }
        }
      },
      "required": [
        "type",
        "elements"
      ]
    }
  },
  "$ref": "#/definitions/layout"
}
