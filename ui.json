{
  "$schema": "src/schemas/uischema.json",
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/done"
    },
    {
      "type": "Control",
      "scope": "#/properties/name",
      "options": {
        "placeholder": "Voller Name"
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/tollheit",
      "options": {
        "radiobuttons": true,
        "stacked": true
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/group_selector"
    },
    {
      "type": "Group",
      "label": "Gruppe 1",
      "showOn": {
        "type": "EQUALS",
        "scope": "#/properties/group_selector",
        "referenceValue": "Gruppen"
      },
      "elements": [
        {
          "type": "HorizontalLayout",
          "label": "Tolle Gruppe",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/due_date"
            },
            {
              "type": "Control",
              "scope": "#/properties/rating",
              "options": {
                "rating": true
              }
            }
          ]
        },
        {
          "type": "Control",
          "scope": "#/properties/description",
          "options": {
            "multi": true,
            "placeholder": "Hier eine ganz ausf√ºhrliche Beschreibung eingeben"
          }
        }
      ]
    },
    {
      "type": "Group",
      "label": "Gruppe 2",
      "showOn": {
        "type": "EQUALS",
        "scope": "#/properties/group_selector",
        "referenceValue": "Gruppen"
      },
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/recurrence",
              "options": {
                "radiobuttons": false
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/recurrence_interval"
            }
          ]
        },
        {
          "type": "Control",
          "scope": "#/properties/testArray"
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/testObject",
      "showOn": {
        "type": "EQUALS",
        "scope": "#/properties/group_selector",
        "referenceValue": "Objekt"
      }
    }
  ]
}
