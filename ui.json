{
  "$schema": "src/schemas/uischema.json",
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/done"
    },
    {
      "type": "Control",
      "scope": "#/properties/name",
      "options": {
        "placeholder": "Voller Name"
      }
    },
    {
      "type": "HorizontalLayout",
      "label": "Tolle Gruppe",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/due_date"
        },
        {
          "type": "Control",
          "scope": "#/properties/rating",
          "options": {
            "rating": true
          }
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/description",
      "options": {
        "multi": true,
        "placeholder": "Hier eine ganz ausf√ºhrliche Beschreibung eingeben"
      }
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/recurrence",
          "options": {
            "radiobuttons": false
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/recurrence_interval",
          "rule": {
            "effect": "HIDE",
            "condition": {
              "type": "LEAF",
              "scope": "#/properties/recurrence",
              "expectedValue": "Never"
            }
          }
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/testArray"
    },
    {
      "type": "Control",
      "scope": "#/properties/testObject"
    }
  ]
}
