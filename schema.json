{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "done": {
      "type": "boolean"
    },
    "due_date": {
      "type": "string",
      "format": "date"
    },
    "rating": {
      "title": "Rating",
      "description": "Deine Meinung ist wichtig f√ºr uns",
      "type": "integer",
      "maximum": 5
    },
    "recurrence": {
      "type": "string",
      "enum": [
        "Never",
        "Daily",
        "Weekly",
        "Monthly"
      ]
    },
    "recurrence_interval": {
      "type": "integer"
    }
  },
  "required": [
    "name",
    "due_date",
    "done"
  ]
}
